<form method="post" action="{{ path('proverb_delete', {'id': proverb.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ proverb.id) }}">
    <button class="btn">Delete</button>
</form>